@model CapaDato.Models.Carrera

@{
    ViewBag.Title = "Crear Carrera";
}

<br>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="text-center"><strong>@ViewBag.Title</strong></h4>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("Crear", "Carrera", FormMethod.Post, htmlAttributes: new { @id = "formFacultad" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(s => s.Codigo)
                        @Html.TextBoxFor(s => s.Codigo, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.Codigo, "", htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(s => s.Descripcion)
                        @Html.TextBoxFor(s => s.Descripcion, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.Descripcion, "", htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(s => s.AnioOfertada)
                        @Html.TextBoxFor(s => s.AnioOfertada, htmlAttributes: new { @class = "form-control", @type="number" })
                        @Html.ValidationMessageFor(s => s.AnioOfertada, "", htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(s => s.FacultadId)
                        @Html.DropDownListFor(s => s.FacultadId,
                            selectList: ViewBag.ListaFacultad as SelectList,
                            optionLabel: "-- Seleccione --",
                            htmlAttributes: new
                            {
                                @class = "form-control"
                            }
                       )
                        @*<select class="form-control">
                            <option value="1">Ciencias</option>
                            <option value="2">Economia</option>
                            <option value="3">Humanidades</option>
                        </select>*@
                        @*@Html.TextBoxFor(s => s.FacultadId, htmlAttributes: new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(s => s.FacultadId, "", htmlAttributes: new { @class = "text-danger" })
                    </div>



                    if (ViewBag.ErrorMensaje != null)
                    {
                        <div class="form-group">
                            <div class="alert alert-danger" role="alert">
                                <strong>@ViewBag.ErrorMensaje</strong>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            @Html.ActionLink(" Regresar", "Index", "Carrera", htmlAttributes: new { @class = "btn btn-primary btn-block" })
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success btn-block"><i class="glyphicon glyphicon-saved"></i> Guardar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
